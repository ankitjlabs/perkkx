<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:alpha="0.7"
    android:weightSum="1"
    android:gravity="center|left">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Available Offers"
        android:textColor="#fefefe"
        android:gravity="center"
        android:textSize="20sp" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        android:background="@drawable/rounded"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"

            android:layout_weight="0.17">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="All Available Offers"
                android:id="@+id/merchantname"
                android:textColor="#000000"
                android:gravity="center"
                android:maxLines="2"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Available Offers"
                android:id="@+id/mer_location"
                android:maxLines="2"
                android:textColor="#848484"
                android:gravity="center"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"

            android:background="#848484"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/chkbx"
                />

            <TextView
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:text=" Lorem Ipsum Dummy"
                android:maxLines="2"

                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"

                android:id="@+id/offer" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/savebtn"
                android:background="@drawable/check_box"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:id="@+id/timers"

                android:background="@drawable/time_unselected"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="Lorem Ipsum Dummy"
            android:id="@+id/remain_time"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#848484"


            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redeem only when at merchant location"
            android:layout_marginTop="30dp"
            android:textColor="#847900"

            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />


            <Button
                android:layout_width="293dp"
                android:layout_height="49dp"
                android:background="@drawable/redeem_bttn"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="5dp"
                android:text="REDEEM"

                android:textSize="30sp"
                android:textColor="#fefefe"
                android:id="@+id/redeembtn"/>









    </LinearLayout>
</LinearLayout>