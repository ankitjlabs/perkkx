<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homebtn"

    tools:context="androidhive.info.materialdesign.activity.HomeFragment"
    >


    <LinearLayout
        android:orientation="vertical"
        android:background="#000000"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/totalperkkxavailable"
            android:text="Total 225 Perkkx Available"
            android:textColor="#fefefe"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_weight="1"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.50">
            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="148dp"
                android:gravity="center">



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dinning_icon"
                    android:layout_gravity="center"
                    android:id="@+id/diningbtn"/>
                <TextView
                    android:id="@+id/dinning_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offers"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/raund22"
                    android:layout_gravity="right"
                    />







            </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DINING"
                    android:textColor="#fefefe"


                    android:textSize="15sp"

                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.50">
                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="148dp"
                    android:gravity="center">



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fitness_icon"
                        android:layout_gravity="center"
                        android:id="@+id/fitnessbtn"/>
                    <TextView
                        android:id="@+id/fitnessoffers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offers"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="right"
                        android:background="@drawable/raund22"
                        />







                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FITNESS"
                    android:textColor="#fefefe"


                    android:textSize="15sp"

                    android:layout_marginTop="10dp" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.50">
                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="148dp"
                    android:gravity="center">



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/beauty_icon"
                        android:layout_gravity="center"
                        android:id="@+id/beautybtn"/>
                    <TextView
                        android:id="@+id/beautyoffers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offers"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="right"
                        android:background="@drawable/raund22"
                        />







                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEAUTY"
                    android:textColor="#fefefe"


                    android:textSize="15sp"

                    android:layout_marginTop="10dp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.50">
                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="148dp"
                    android:gravity="center">



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/personal_care_icon"
                        android:layout_gravity="center"
                        android:id="@+id/personalcarebtn"/>
                    <TextView
                        android:id="@+id/personalcareoffers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offers"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="right"
                        android:background="@drawable/raund22"

                        />







                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PERSONAL CARE"
                    android:textColor="#fefefe"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>

