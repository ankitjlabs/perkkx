<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homebtn"

    tools:context="androidhive.info.materialdesign.activity.HomeFragment"
    android:id="@+id/home">


    <LinearLayout
        android:orientation="vertical"
        android:background="#000000"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/totalperkkx"
            android:text="Total 225 Perkkx Available"
            android:textColor="#fefefe"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="460dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="190dp"
                android:layout_height="match_parent">


                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"

                    android:background="@drawable/dinning_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DINING"
                    android:textColor="#fefefe"

                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="190dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"

                    android:background="@drawable/fitness_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FITNESS"
                    android:textColor="#fefefe"

                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="190dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"

                    android:background="@drawable/beauty_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp" >






                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEAUTY"
                    android:textColor="#fefefe"

                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="190dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/imageButton"
                    android:background="@drawable/personal_care_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PERSONAL CARE"
                    android:textColor="#fefefe"
                    android:id="@+id/textView"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:background="#fefefe"
        android:weightSum="1">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/single_bttn"
            android:layout_weight="0.12"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="50dp"

            android:background="@drawable/group_bttn_hover"
            android:layout_weight="0.12"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp" />
    </LinearLayout>


</RelativeLayout>

